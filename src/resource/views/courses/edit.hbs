<div class="mt-4 px-5">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group mt-2">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>
        <div class="form-group mt-2">
            <label for="title">Mô tả khóa học</label>
            <textarea class="form-control" id="title" name="title">{{course.title}}</textarea>
        </div>
        <div class="form-group mt-2">
            <label for="videoId">Link video</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Sửa khóa học</button>
    </form>
</div>